
@{
    ViewData["Title"] = "RoomsView";
}
@{
    Layout = "_LayoutRooms";
}
<br />
<div class="container row p-0 m-0">
    <div class="col-6">
        <h2 class="text-info">Room List</h2>
    </div>
    <div class="col-3 offset-3">
        <a asp-action="Upsert" asp-controller="Rooms" class="btn btn-info form-control text-white">
            Reserve a new room.
        </a>
    </div>
    <div class="col-12 border p-1">
        <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Capacity</th>
                    <th>Type</th>
                    <th>Occupied</th>
                    <th>AdultPrice</th>
                    <th>ChildPrice</th>
                    <th>Actions</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/roomsList.js"></script>
}

