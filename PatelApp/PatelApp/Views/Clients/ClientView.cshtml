
@{
    ViewData["Title"] = "ClientView";
}
@{
    Layout = "_LayoutClients";
}
<br />
<div class="container row p-0 m-0">
    <div class="col-6">
        <h2 class="text-info">Client List</h2>
    </div>
    <div class="col-3 offset-3">
        <a asp-action="Upsert" asp-controller="Clients" class="btn btn-info form-control text-white">
            Add a new client
        </a>
    </div>
    <div class="col-12 border p-1">
        <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Last Name</th>
                    <th>Telephone</th>
                    <th>Email</th>
                    <th>Senior</th>
                    <th>Actions</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/clientsList.js"></script>
}

